{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "MusicCut",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "ffmpeg",
            "cmd": "ffmpeg",
            "args": true
          },
          {
            "name": "ffprobe",
            "cmd": "ffprobe",
            "args": true
          },
          {
            "name": "fpcalc",
            "cmd": "fpcalc",
            "args": true
          },
          {
            "name": "python",
            "cmd": "python",
            "args": true
          }
        ]
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APP/**", "$DOCUMENT/**", "$DOWNLOAD/**", "$VIDEO/**", "$AUDIO/**"]
      },
      "path": {
        "all": true
      },
      "process": {
        "all": true,
        "exit": true,
        "relaunch": true
      },
      "window": {
        "all": true,
        "create": true,
        "center": true,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "setDecorations": true,
        "setFullscreen": true,
        "setPosition": true,
        "setSize": true,
        "setTitle": true,
        "show": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Video",
      "copyright": "Copyright 2024 MusicCut Team",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ],
      "identifier": "com.musiccut.app",
      "longDescription": "基于音频指纹识别的智能视频剪辑工具，支持自动识别视频中的音乐片段并进行剪辑。",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "音频指纹视频剪辑工具",
      "targets": ["nsis"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost data:; media-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "MusicCut - 音频指纹视频剪辑工具",
        "width": 1400,
        "minWidth": 1000,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": false
      }
    ]
  }
}
